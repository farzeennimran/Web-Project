    <style>

       .checked {
         color: orange;
         }
      body {
        background-color: #DDD0C8;
        font-family: "Open Sans", sans-serif;
      }

      .profile-header {
        background-image: url("https://media.istockphoto.com/id/1036551174/photo/wood-raw-material-trunk-tree.jpg?s=1024x1024&w=is&k=20&c=nxIpytYoL4kenm0eMh2mEfzG05hf3kbGXU4Tip-vWsw=");
        background-size: cover;
        background-position: center;
        height: 300px;
      }

      .profile-pic {
        border: 5px solid #fff;
        border-radius: 50%;
        width: 150px;
        height: 150px;
        margin-top: -75px;
        margin-left: 30px;
      }

      .profile-name {
        font-size: 28px;
        font-weight: 600;
        margin-top: 15px;
      }

      .profile-username {
        font-size: 20px;
        color: #888;
      }

         .badge {
  display: inline-block;
  background-color: #1DA1F2;
  color: #fff;
  font-weight: bold;
  font-size: 14px;
  padding: 5px 10px;
  border-radius: 20px;
}


      .profile-bio {
        font-size: 18px;
        margin-top: 20px;
      }

      .profile-stats {
        margin-top: 30px;
      }

      .profile-stat-count {
        font-size: 22px;
        font-weight: 600;
        margin-bottom: 0;
      }

      .profile-stat-label {
        font-size: 16px;
        color: #888;
        margin-top: 5px;
      }

      .profile-edit-btn {
        display: inline-block;
        background-color: #ffd800;
        color: #fff;
        padding: 8px 16px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 18px;
        font-weight: 600;
        margin-top: 20px;
        transition: all 0.3s ease-in-out;
      }

      .profile-edit-btn:hover {
        background-color: #2680c2;
      }

      .profile-actions {
        margin-top: 20px;
      }

      .profile-action-btn {
        display: inline-block;
        background-color: #fff;
        color: #333;
        padding: 5px 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        font-size: 18px;
        font-weight: 600;
        margin-right: 10px;
        text-decoration: none;
        transition: all 0.3s ease-in-out;
      }

      .profile-action-btn:hover {
        background-color: #eee;
      }

      .profile-posts {
        margin-top: 30px;
      }

      .profile-post {
        margin-bottom: 30px;
      }

      .profile-post-img {
        max-width: 100%;
      }

      .rating {
  display: inline-block;
}

.rating input[type="radio"] {
  display: none;
}

.rating label {
  font-size: 24px;
  color: #ccc;
  cursor: pointer;
  display: inline-block;
  width: 30px;
  text-align: center;
  margin-right: 5px;
  line-height: 30px;
}

.rating label:before {
  content: '\2605';
}

.rating input[type="radio"]:checked + label {
  color: #ffca08;
}

body {
  /* Light Mode Styles */
  background-color: #f7f7f7;
  color: #333;
}

body.dark-mode {
  /* Dark Mode Styles */
  background-color: #333;
  color: #f7f7f7;
}

button#theme-toggle {
  padding: 10px;
  background-color: #333;
  color: #f7f7f7;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}
 .animated {
    -webkit-transition: height 0.2s;
    -moz-transition: height 0.2s;
    transition: height 0.2s;
}

.stars
{
    margin: 20px 0;
    font-size: 24px;
    color: #d17581;
}
.dc{
  background-color: rgb(219, 194, 219);
}
