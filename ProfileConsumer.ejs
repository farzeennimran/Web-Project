  <body>

    <section style="background-color: #eee;">
      <div class="container py">
        <div class="row">
          <div class="col">
            <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
              <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/home">Home</a></li>
                <li class="breadcrumb-item"><a href="/explore">explore</a></li>
              </ol>
            </nav>
          </div>
        </div>
    
        <div class="row">
          <div class="col-lg-4">
            <div class="card mb-4">
              <div class="card-body text-center">
                <img src="../uploads/<%=data.image%>" alt="avatar"
                  class="rounded-circle img-fluid" style="width: 150px;">
                <h5 class="my-3"><%=data.company_name%> <%if(data.is_premium==1){%>
                  <img src="../uploads/check.png" alt="" style="height: 22px; width: 22px;">
                  <%}%></h5>
                <p class="text-muted mb-1"><%=data.contact_name%></p>
              </div>
            </div>
           

          </div>
          <div class="col-lg-8">
            <div class="card mb-4">
              <div class="card-body">
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Full Name</p>
                  </div>
                  <div class="col-sm-9">
                   
                    <p class="text-muted mb-0"><%=data.company_name%></p>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Email</p>
                  </div>
                  <div class="col-sm-9">
                    <p class="text-muted mb-0"><%=data.contact_email%></p>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Phone</p>
                  </div>
                  <div class="col-sm-9">
                    <p class="text-muted mb-0"><%=data.contact_phone%></p>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Address</p>
                  </div>
                  <div class="col-sm-9">
                    <p class="text-muted mb-0"><%=data.address%></p>
                  </div>
                </div>
              </div>
              <div class="main-button">
            <a href="/editprofile">Edit Profile</a>
            </div>
                <form class="col lg-8" action="/meeting" method="post">
                  <div class="main-button">
                  <select class="profile-edit-btn m-1 dc" name="select" aria-label="Default select example" required>
                    <%if(manfact.length> 0){
                      manfact.forEach(function(data){
                      %>
                    <option value="<%=data.manufacturer_id%>"><%=data.company_name%></option>
                        <% }); } %>
                  </select>
                  </div>
                  <input  class="col-sm-4 py-2 m-2" type="text" name="address" placeholder="enter your Address">
                  <input type="submit" class="btn" value="Schedule Meeting">
                </form>
            </div>
          
          </div>
        </div>
      </div>
   
    </section>


</body>

